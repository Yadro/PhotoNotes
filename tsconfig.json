{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "outDir": "build",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDirs": ["./src", "android/PhotoModule"]
  },
  "include": [
    "src",
    "node_modules/@types/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}